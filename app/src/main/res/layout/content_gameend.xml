<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:showIn="@layout/activity_gameend" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/winnerIs"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="164dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/scoreIs"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/winnerIs"
        android:layout_alignLeft="@+id/winnerIs"
        android:layout_alignStart="@+id/winnerIs" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Play Again!"
        android:id="@+id/restart"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/scoreIs"
        android:layout_alignLeft="@+id/scoreIs"
        android:layout_alignStart="@+id/scoreIs" />
</RelativeLayout>